{
    "manifest_version": 2,
    "name": "PostAutoSave",
    "version": "1.8",
    "description": "Adds auto save functionality to blog.ir panel",
    "homepage_url": "https://github.com/guftall/blogir-extension",
    "icons": {
        "24": "icons/blog.ico"
    },
    "options_ui": {
        "page": "options/options.html"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.blog.ir/panel/*"
            ],
            "js": [
                "config.js",
                "persister.js",
                "persisted_posts.js",
                "modal.js",
                "index.js",
                "lib/jquery-1.8.2.min.js"
            ]
        }
    ],
    "background": {
        "scripts": [
            "config.js",
            "background.js"
        ]
    },
    "permissions": [
        "contextMenus",
        "storage",
        "tabs"
    ],
    "web_accessible_resources": [
        "content/modal.html",
        "content/modal.css"
    ],
    "applications": {
        "gecko": {
            "id": "{a2e0de1e-28eb-47f3-ae67-9be6cbec105b}"
        }
    }
}